<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Below When Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#006867" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Below General State -->
    <item>
        <layer-list>
            <!-- Shadow Below -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#006867" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Content Below -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#009b9a" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>